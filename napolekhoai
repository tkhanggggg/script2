local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Khoaiii",
   LoadingTitle = "script potato",
   LoadingSubtitle = "by Khoai",
   Theme = "Default"
})

local FarmTab = Window:CreateTab("Farm", 4483362458)
local player = game.Players.LocalPlayer
local farmEnabled = false

FarmTab:CreateToggle({
    Name = "Farm Fingers",
    CurrentValue = false,
    Flag = "FarmToggle",
    Callback = function(Value)
        farmEnabled = Value
        if farmEnabled then
            local livingFolder = workspace:FindFirstChild("Living")
            if not livingFolder then
                Rayfield:Notify({
                    Title = "Farm",
                    Content = "Folder 'Living' không tồn tại!",
                    Duration = 3
                })
                return
            end

            local npc = livingFolder:FindFirstChild("The Strongest In History")
            local character = player.Character or player.CharacterAdded:Wait()
            local hrp = character:WaitForChild("HumanoidRootPart")

            if npc and npc:FindFirstChild("HumanoidRootPart") then
                hrp.CFrame = CFrame.new(-41, 4, -9742)
                spawn(function()
                    while farmEnabled do
                        local currentNpc = livingFolder:FindFirstChild("The Strongest In History")
                        if currentNpc and currentNpc:FindFirstChild("HumanoidRootPart") then
                            local npcHRP = currentNpc.HumanoidRootPart
                            local behindPos = npcHRP.Position - npcHRP.CFrame.LookVector * 4
                            hrp.CFrame = CFrame.new(behindPos, npcHRP.Position)
                        else
                            Rayfield:Notify({
                                Title = "Farm",
                                Content = "Không tìm thấy NPC!",
                                Duration = 3
                            })
                            farmEnabled = false
                            break
                        end
                        task.wait(0.1)
                    end
                end)
            else
                Rayfield:Notify({
                    Title = "Farm",
                    Content = "Không tìm thấy NPC!",
                    Duration = 3
                })
            end
        else
            print("❌ Đã dừng chế độ Farm!")
        end
    end
})
